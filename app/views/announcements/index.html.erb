<div class="jumbotron">
  <div class="container">
    <h1>Announcements</h1>
    <div class="row">
      <% @announcements.each do |announcement| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <div class="caption">
              <h3><strong><%= announcement.name %></strong></h3>
              <p>Posted by <%= announcement.user.name if announcement.user %></p>
              <p><%= raw announcement.body %></p>
              <p>
                <%= link_to "Edit", edit_announcement_path(announcement), :class => "btn btn-primary" %>
                <%= link_to "Destroy", announcement, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %>
              </p>
            </div><!-- ./caption -->
          </div><!-- ./thumbnail -->
        </div> <!-- ./col-sm-6 col-md-4 -->
      <% end %>
    </div><!-- ./row -->
    <br />
    <p>
      <button type="button" class="btn btn-default">
        <%= link_to new_announcement_path do %>
          <span class="glyphicon glyphicon-plus"></span> New Announcement
        <% end %>
      </button>
    </p>
  </div> <!-- ./container -->
</div> <!-- ./jumbotron -->
