<h1>Listing announcements</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.name %></td>
        <td><%= announcement.body %></td>
        <td><%= link_to 'Show', announcement %></td>
        <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
        <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Announcement', new_announcement_path %>


<div class="row">
  <% @announcements.each do |announcement| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= announcement.name %></h3>
          <p><%= announcement.body %></p>
          <p>
            <%= link_to "Edit", edit_announcement_path(announcement), :class => "btn btn-primary" %>
            <%= link_to "Destroy", announcement, method: :delete, data: { confirm: 'Are you sure?' } :class => "btn btn-primary" %>
            <!--<a href="#" class="btn btn-primary" role="button">Button</a>
            <a href="#" class="btn btn-default" role="button">Button</a>-->
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
