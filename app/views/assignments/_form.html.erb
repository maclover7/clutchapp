    <div class="form-group">
      <%= f.label :prompt %><br>
      <%= f.text_area :prompt, class:'summernote' %>
    </div>
    <div class="form-group">
      <%= f.label :work_allowed %><br>
      <%= f.check_box :work_allowed, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
